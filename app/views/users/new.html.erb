<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "削除", user_path(user), method: :delete, data: { confirm: "これでいいですか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新しいUser", new_user_path %>
